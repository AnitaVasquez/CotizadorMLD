@model IEnumerable<Cotizacion>

@(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.IdCotizacion).Titled("#");
                columns.Add(model => model.codigoCotizacion).Titled("Código de Cotización");
                columns.Add(model => model.Version).Titled("Versión");
                columns.Add(model => model.FechaCotizacion).Titled("Fecha de Cotización").Formatted("{0:d}"); 
                columns.Add(model => model.Cliente).Titled("Cliente");
                columns.Add(model => model.Producto).Titled("Producto");
                columns.Add(model => model.Concepto).Titled("Concepto"); 
                columns.Add(model => model.SubtotalCotizacion).Titled("Subtotal");
                columns.Add(model => model.ValorComision).Titled("Comisión");
                columns.Add(model => model.TotalCotizacion).Titled("Total");


                columns.Add(model => "<button style='background-color:#00AD8E;border-color: #00AD8E; class='btn btn-success' onclick='location.href=\"" + @Url.Action("Edit", "Cotizador", new { id = model.IdCotizacion }) + "\"' id='editar' data-id=\"" + model.IdCotizacion + "\"><span class='glyphicon glyphicon-pencil' aria-hidden='true'></span></button>" +
                " <button style='background-color:#FFC52D;border-color: #FFC52D; class='btn btn-warning' onclick='location.href=\"" + @Url.Action("DescargarPDF", "Cotizador", new { id = model.IdCotizacion }) + "\"' id='generarCotizacion' data-id=\"" + model.IdCotizacion + "\"><span class='glyphicon glyphicon-print' aria-hidden='true' style='color:black'></span></button>").Encoded(false);

            })
            .Empty(Mensajes.MensajeNoDataListado)
            .Id("grid-Cotizador")
            .Pageable(pager =>
            {
                pager.PagesToDisplay = 5;
                pager.RowsPerPage = 10;
            })
            .Filterable()
            .Sortable()
)




